/* components/mobai-carousel.wxss */
.carousel{
  min-width: 100vw;
  height: 530rpx;
  background-image: linear-gradient(to bottom, #728AFE, #fff);
}
.carousel swiper-item{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.carousel swiper-item .img{
  width: 90%;
  height: 85%;
  display: block;
  border-radius: 10px;
  transform: scale(0.8);
  margin: 0;
  padding: 0;
  transition: transform .3s ease-out;
}

.carousel swiper-item .selectImg{
  transform: scale(0.9);
}

.carousel swiper-item view{
  width: 100%;
  padding: 0;
  text-align: center;
  font-size: 28rpx;
  margin-top: -30rpx;
  transition: margin .3s ease-out;
}
.carousel swiper-item .selectView{
  margin-top: 0;
}